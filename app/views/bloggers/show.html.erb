<h1><%=@blogger.name%></h1>

<label> Age: </label>
<%=@blogger.age%><br>
<br>
<label> Bio: </label><br>
<%=@blogger.bio%><br>
<br>
<label> Total Likes:</labe><br>


<%= @blogger.posts.collect { |post| post.likes }.sum %><br>
<br>

<label> Featured Post: </label><br>
<ul>
<% @blogger.most_liked.each do |post| %>
    <li><%= link_to post.title, post_path(post) %></li>
<% end %>
</ul>









